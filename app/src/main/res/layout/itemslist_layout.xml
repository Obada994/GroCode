<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="81dp" android:layout_marginBottom="160dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editText" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="75dp" android:layout_toStartOf="@+id/add" android:layout_alignEnd="@+id/add"/>
    <Button
            android:layout_marginTop="10dp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/add"
            android:layout_alignBottom="@+id/editText" android:layout_alignParentEnd="true"
            android:layout_marginEnd="78dp"/>
    <ImageButton android:layout_marginTop="11dp"
                 android:scaleType="centerInside" android:layout_width="75dp" android:layout_height="wrap_content" android:src="@drawable/mic"
                 android:layout_alignBottom="@+id/editText" android:layout_toEndOf="@+id/editText"
                 android:id="@+id/btnSpeak"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2" android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/btnSpeak" android:layout_marginTop="400dp"
    />
</RelativeLayout>