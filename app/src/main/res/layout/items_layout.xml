<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/editText" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false" android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/add" android:layout_marginRight="75dp"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"/>

    <ListView
            android:layout_alignParentBottom="false"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/boughtlistView" android:layout_alignParentTop="false" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:layout_below="@+id/editText"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bought Items"
            android:id="@+id/textView"
            android:layout_below="@+id/boughtlistView"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="81dp"
            android:layout_below="@+id/textView"/>

</RelativeLayout>